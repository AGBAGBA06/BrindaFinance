@using Microsoft.AspNetCore.Identity
@using FacturationApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FacturationApp</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Styles Perso -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- HEADER -->
    <header class="bg-primary text-white shadow-sm mb-4">
        <div class="container-fluid d-flex justify-content-between align-items-center py-3">

            <!-- Logo et titre -->
            <div class="d-flex align-items-center">
                <img src="https://via.placeholder.com/50" alt="Logo" class="rounded-circle me-3 border border-white">
                <h1 class="h4 mb-0 fw-bold">FacturationApp</h1>
            </div>

            <!-- Navigation -->
            <div class="d-flex align-items-center gap-3">
                <a href="/Facture/Create" class="btn btn-light btn-sm text-primary fw-bold">
                    <i class="bi bi-plus-circle me-1"></i> Nouvelle Facture
                </a>
                <a href="/Client/Index" class="btn btn-light btn-sm text-primary fw-bold">
                    <i class="bi bi-people me-1"></i> Clients
                </a>
                <a href="/Facture/Index" class="btn btn-light btn-sm text-primary fw-bold">
                    <i class="bi bi-receipt me-1"></i> Factures
                </a>

                <!-- Authentification -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm dropdown-toggle text-primary fw-bold" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i> @UserManager.GetUserAsync(User).Result.Nom @UserManager.GetUserAsync(User).Result.Prenom
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profil</a></li>
                            <li><a class="dropdown-item" href="#">Paramètres</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-1"></i> Se déconnectere
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/User/Login" class="btn btn-outline-light btn-sm fw-bold">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Connexion
                    </a>
                    <a href="/User/Register" class="btn btn-warning btn-sm fw-bold">
                        <i class="bi bi-person-plus me-1"></i> Inscription
                    </a>
                }
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main class="container pb-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - <b>FacturationApp</b> | 
                <a class="text-warning text-decoration-none" asp-controller="Home" asp-action="Privacy">Confidentialité</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
