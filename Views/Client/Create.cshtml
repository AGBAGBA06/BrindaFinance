@model FacturationApp.Models.Client

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Ajouter un Client</h2>

        <form method="post">
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Nom" class="form-label">Nom</label>
                    <input asp-for="Nom" class="form-control" placeholder="Nom du client" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email du client" type="email" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Telephone" class="form-label">Téléphone</label>
                    <input asp-for="Telephone" class="form-control" placeholder="Téléphone du client" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Adresse" class="form-label">Adresse</label>
                    <input asp-for="Adresse" class="form-control" placeholder="Adresse du client" required />
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Client/Index" class="btn btn-secondary">Retour à la liste</a>
                <button type="submit" class="btn btn-success">Ajouter Client</button>
            </div>
        </form>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
